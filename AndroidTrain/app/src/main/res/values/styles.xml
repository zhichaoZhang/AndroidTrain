<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:logo">@drawable/ic_launcher</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Material" parent="android:Theme.Material">

    </style>

    <style name="LightLinearProgressDrawable" parent="Material.Drawable.LinearProgress.Determinate">
        <item name="lpd_strokeSize">13dp</item>
        <item name="lpd_strokeColor">@color/palette_orange</item>
        <item name="lpd_strokeSecondaryColor">@color/palette_aluminium</item>
    </style>

    <declare-styleable name="NotifyPointView">
        <attr name="npv_point_color" format="color"/>
        <attr name="npv_point_radius" format="dimension|integer"/>
        <attr name="npv_text_color" format="color"/>
        <attr name="npv_text_size" format="dimension|integer"/>
        <attr name="npv_anim_duration" format="dimension|integer|reference"/>
        <attr name="npv_rotate" format="float|dimension"/>
    </declare-styleable>

</resources>